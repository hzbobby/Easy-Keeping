<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="15dp"
    android:foreground="?selectableItemBackground"

    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/footer_category_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_add_circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/footer_category_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="新增小类"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/footer_category_icon"
        app:layout_constraintStart_toEndOf="@+id/footer_category_icon"
        app:layout_constraintTop_toTopOf="@+id/footer_category_icon" />
</androidx.constraintlayout.widget.ConstraintLayout>