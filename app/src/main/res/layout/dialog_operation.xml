<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="16dp"
    android:paddingBottom="16dp">

    <TextView
        android:id="@+id/operation_detail_tv"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:clickable="true"
        android:foreground="?selectableItemBackground"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:text="@string/operation_menu_1"
        android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />

    <TextView
        android:id="@+id/operation_edit_tv"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:clickable="true"

        android:foreground="?selectableItemBackground"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:text="@string/operation_menu_2"
        android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />

    <TextView
        android:id="@+id/operation_delete_tv"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:clickable="true"
        android:foreground="?selectableItemBackground"

        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:text="@string/operation_menu_3"

        android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />

</LinearLayout>