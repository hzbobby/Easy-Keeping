<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Easy" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_200</item>
        <item name="colorPrimaryVariant">@color/green_400</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red_100</item>
        <item name="colorSecondaryVariant">@color/red_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus">true</item>


    </style>

    <style name="BottomSheetFragmentTheme" parent="Theme.Material3.DayNight.BottomSheetDialog">
        <item name="android:windowIsFloating">true</item>

    </style>

    <style name="MaterialDialogFragmentTheme" parent="Theme.Material3.DayNight.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="cornerFamily">?attr/cornerFamily</item>
    </style>


    <style name="FullScreenDialogStyle" parent="Theme.Material3.DayNight.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="bottomSheetStyle">@style/FullScreenBottomSheetStyle</item>
    </style>
    <style name="FullScreenBottomSheetStyle" parent="Widget.Material3.BottomSheet">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="FullScreenDialogTheme" parent="Theme.Easy">
        <item name="android:windowIsFloating">false</item>
<!--        <item name="android:windowAnimationStyle">@style/FullScreenDialogAnimation</item>-->
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="FullScreenDialogAnimation" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>


    <!--    dialog全屏设置-->
    <style name="FullDialogTheme" parent="Theme.Easy">
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
    </style>


</resources>